<div class="container">
  <h1 class="text-center mb-3">Welcome to our Countdown</h1>
  <div class="text-center py-3"><%= @letters %></div>
  <h2>What is the longest word you can find?</h2>
  <div class="form-group mb-3 py-3">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input class="form-control" type="text"
      name="word"
      placeholder="Type your word">
      <input class="form-control btn btn-primary mb-3" type="submit">
    </form>
  </div>
</div>
